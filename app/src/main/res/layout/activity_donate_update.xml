<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:hint="ناو"
        android:textSize="26dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تەمەن"
        android:textSize="26dp"
        android:layout_margin="5dp"
        android:id="@+id/edt_age"
        android:layout_below="@+id/edt_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ناونیشان"
        android:textSize="26dp"
        android:layout_margin="5dp"
        android:id="@+id/edt_address"
        android:layout_below="@+id/edt_age"/>

    <EditText
        android:id="@+id/edt_tel"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_below="@+id/edt_address"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:hint="تەلەفۆن"
        android:inputType="phone"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_address"
        android:layout_alignStart="@+id/edt_name"
        android:layout_alignLeft="@+id/edt_name"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="5dp"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="26dp" />

    <TextView
        android:id="@id/tv"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_below="@id/edt_tel"
        android:layout_alignStart="@+id/edt_name"
        android:layout_alignLeft="@+id/edt_name"
        android:layout_marginStart="186dp"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="5dp"
        android:text="جۆری خوێن"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/sp_blood"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_below="@+id/edt_pass"
        android:layout_alignStart="@+id/edt_name"
        android:layout_alignLeft="@+id/edt_name"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:textSize="26dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="325dp"
        android:layout_height="67dp"
        android:layout_below="@+id/sp_blood"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:onClick="update_info"
        android:text="تۆمارکردن"
        android:textSize="30dp" />

</RelativeLayout>
