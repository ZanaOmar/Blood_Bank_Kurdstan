<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/edt_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="53dp"
        android:hint="تەلەفۆن"
        android:inputType="phone"
        android:textSize="26dp" />

    <TextView
        android:id="@id/tv"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_below="@+id/edt_tel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="199dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="5dp"
        android:text="جۆری خوێن"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/sp_blood"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-51dp"
        android:layout_marginBottom="5dp"
        android:textSize="26dp" />

    <Button
        android:id="@+id/btn_save"

        android:layout_width="293dp"
        android:layout_height="70dp"

        android:layout_below="@+id/sp_blood"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_background"
        android:onClick="save_info"
        android:text="تۆمارکردن"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="368dp"
        android:layout_height="219dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@mipmap/blood1" />


</RelativeLayout>
